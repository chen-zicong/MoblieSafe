<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:moblilesafe="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF"
              android:orientation="vertical">

    <TextView
        style="@style/titlesStyle"
        android:text="设置中心"
        android:layout_marginBottom="10dp"/>

    <com.chenzicong.mobliesafe.view.SettingItemView

        android:id="@+id/siv_unpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        moblilesafe:desno="自动更新已开启"
        moblilesafe:desoff="自动更新已关闭"
        moblilesafe:destitle="自动更新设置"
        android:layout_margin="5dp">

    </com.chenzicong.mobliesafe.view.SettingItemView>

    <com.chenzicong.mobliesafe.view.SettingItemView

        android:id="@+id/siv_call_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        moblilesafe:desno="电话归属地的显示设置"
        moblilesafe:desoff="电话归属地显示已关闭"
        moblilesafe:destitle="电话归属地显示已开启"
        android:layout_margin="5dp">

    </com.chenzicong.mobliesafe.view.SettingItemView>

</LinearLayout>